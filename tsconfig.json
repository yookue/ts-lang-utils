{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["dom", "es2017"],
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "@": [
                "./src"
            ],
            "@/*": [
                "./src/*"
            ],
            "@yookue/ts-lang-utils": [
                "./src"
            ],
            "@yookue/ts-lang-utils/*": [
                "./src/*",
                "*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "docs-dist",
    ]
}
