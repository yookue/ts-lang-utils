{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es2017",
        "lib": ["dom"],
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "@": [
                "./src"
            ],
            "@/*": [
                "./src/*"
            ],
            "@yookue/ts-lang-utils": [
                "./src"
            ],
            "@yookue/ts-lang-utils/*": [
                "./src/*",
                "*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        "dist",
        "docs-dist"
    ]
}
